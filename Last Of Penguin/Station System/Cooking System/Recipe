using UnityEngine;

[CreateAssetMenu(fileName = "Recipe", menuName = "Scriptable Object/Recipe", order = int.MaxValue)]
public class Recipe : ScriptableObject
{
    public ItemMaterial[] ingredients;      //제작에 필요한 재료
    public int itemCraftTier;                   //요구 조합 티어
    public int order;                       //정렬
    public string resultItemName;           //제작 되는 아이템 이름
    public string resultItemEngName;        //인벤토리에 넣기 위한 아이템 이름
    public float cookingTime;               //요리하는 시간
    public float health;                    //변화하는 체력값
    public float temperature;               //변화하는 온도값
    public Sprite foodItemImg;              //제작 되는 아이템 스프라이트
    public Sprite foodItemImgGray;              //제작 되는 아이템 스프라이트
}
